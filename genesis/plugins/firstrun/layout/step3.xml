<xml>
    <div class="ui-firstrun-stripe">
        <h1 id="welcomemsg">Welcome to Genesis</h1>
    </div>
    <div class="container">
        <wizardform back="True" id="frmChangeRootPassword" width="800">
            <div class="text-center">
                <div class="table-responsive">
                    <table class="table table-condensed">
                        <tr><td style="background-color:#3498DB;"></td><td style="background-color:#428BCA;"></td><td></td><td></td><td></td></tr>
                        <tr><td>Step 1<br />User/Password</td><td><strong>Step 2</strong><br />Administrator</td><td>Step 3<br />Settings</td><td>Step 4<br />Applications</td><td>Step 5<br />Review</td></tr>
                    </table>
                </div>
                <label size="3" text="Please type a new password below to create an Administrator (root) account. You shouldn't need this often. It should be a hard to guess, yet memorable password." />
                <spacer height="20" />
            </div>
            <div id="veriferr" />
            <formline text="New administrator password:" help="Your password needs to be at least six characters." feedback="gen-lock" iid="rootpasswd">
                <textinput name="rootpasswd" id="rootpasswd" password="True" verify="password" verifywith="rootpasswd" />
            </formline>
            <formline text="Please type your new administrator password again:" feedback="gen-lock" iid="rootpasswdb">
                <textinput name="rootpasswdb" id="rootpasswdb" password="True" verify="password" verifywith="rootpasswd" />
            </formline>
        </wizardform>
    </div>
</xml>
