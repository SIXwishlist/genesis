<xml>
    <div class="ui-firstrun-stripe">
        <h1 id="welcomemsg">Welcome to Genesis</h1>
    </div>
    <div class="container">
        <wizardform back="True" id="frmChangePassword" width="800">
            <div class="text-center">
                <div class="table-responsive">
                    <table class="table table-condensed">
                        <tr><td style="background-color:#428BCA;"></td><td></td><td></td><td></td><td></td></tr>
                        <tr><td><strong>Step 1</strong><br />User/Password</td><td>Step 2<br />Administrator</td><td>Step 3<br />Settings</td><td>Step 4<br />Applications</td><td>Step 5<br />Review</td></tr>
                    </table>
                </div>
                <label size="3" text="Please type a new username and password below, to log in and access your services." />
                <spacer height="20" />
            </div>
            <div id="veriferr" />
            <formline text="New username:" help="Your username shouldn't have any capital letters, dots, colons, or spaces; or end with a hyphen." feedback="gen-user" iid="login">
                <textinput name="login" id="login" verify="username" />
            </formline>
            <formline text="New password:" help="Your password needs to be at least six characters long." feedback="gen-lock" iid="passwd">
                <textinput name="passwd" id="passwd" password="True" verify="password" verifywith="passwd" />
            </formline>
            <formline text="Please type your new password again:" feedback="gen-lock" iid="passwdb">
                <textinput name="passwdb" id="passwdb" password="True" verify="password" verifywith="passwd" />
            </formline>
        </wizardform>
    </div>
</xml>
