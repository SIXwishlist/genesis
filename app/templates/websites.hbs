<a href="#" class="btn btn-default pull-right" {{action 'showModal' 'website/add' model}}><i class="fa fa-globe"></i> Add Website</a>
<h1 class="page-header">My Websites</h1>

<div class="ui-items-3">
  {{#each sortedSites as |site|}}
    <div class="ui-item {{if site.isReady '' 'is-pending'}}">
      <div class="ui-item-icon">
        <i class="fa-fw fa-5x {{site.siteIcon}}"></i>
      </div>
      <div class="ui-item-content">
        <h2>{{site.properName}}</h2>
        <p class="lead">{{site.siteName}}</p>
        <a target="_blank" class="btn btn-primary btn-block {{if site.isReady '' 'disabled'}}" href={{site.address}}><i class="fa fa-globe"></i> Open Site</a>
        <div class="ui-item-buttons">
          <a href="#" class="ui-item-button {{if site.isReady '' 'disabled'}}" {{action 'showModal' 'website/edit' site model}}><i class="fa fa-info-circle fa-fw fa-lg"></i><br />Edit</a>
          <a href="#" class="ui-item-button {{if site.isReady '' 'disabled'}}" {{action 'toggleStatus' site}}><i class="fa fa-fw fa-lg {{if site.enabled 'fa-minus-circle' 'fa-check-square'}}"></i><br />{{if site.enabled 'Disable' 'Enable'}}</a>
          <a href="#" class="ui-item-button text-danger {{if site.isReady '' 'disabled'}}" {{action 'showConfirm' 'delete' 'Are you sure you want to delete this website?' site}}><i class="fa fa-minus-circle fa-fw fa-lg"></i><br />Remove</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>
