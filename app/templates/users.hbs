<ul class="nav nav-tabs manual-tabs">
    <li class="active">{{#link-to 'users'}}<i class="fa fa-user fa-fw"></i> Users{{/link-to}}</li>
    <li>{{#link-to 'groups'}}<i class="fa fa-users fa-fw"></i> Groups{{/link-to}}</li>
    <li>{{#link-to 'domains'}}<i class="fa fa-code fa-fw"></i> Domains{{/link-to}}</li>
</ul>

<div class="ui-items-4">
    {{#each user in model.users}}
      <div {{bind-attr class=":ui-item user.isReady::is-pending"}}>
        <div class="ui-item-icon">
            <i class="fa fa-user fa-fw fa-5x"></i>
        </div>
        <div class="ui-item-content">
          <h2>{{user.name}}</h2>
          <p class="lead">{{user.fullName}}</p>
          <div class="btn-group btn-group-sm">
            <a href="#" {{bind-attr class=":btn :btn-default user.isReady::disabled"}} {{action 'showModal' 'user/edit' user model}}><i class="fa fa-info-circle"></i> Edit</a>
            <a href="#" {{bind-attr class=":btn :btn-danger user.isReady::disabled"}} {{action 'showConfirm' 'delete' 'Are you sure you want to delete this user?' user}}><i class="fa fa-minus-circle"></i> Delete</a>        
          </div>
        </div>
      </div>
    {{/each}}
    <div class="ui-item">
      <div class="ui-item-icon">
        <i class="fa fa-plus-circle fa-fw fa-5x"></i>
      </div>
      <div class="ui-item-content">
        <h2>Add</h2>
        <p class="lead">New User</p>
        <div class="btn-group btn-group-sm">
          <a href="#" class="btn btn-default" {{action 'showModal' 'user/add' model}}><i class="fa fa-user"></i> Add</a>
        </div>
      </div>
    </div>
</div>
