<div class="ui four cards">
  {{#each model as |device|}}
    <div class="card">
      {{#link-to 'app.syncthing.devices.edit' device class="image {{if device.isReady '' 'disabled'}}"}}
        <div class="{{device.cardColor}}">
          <i class="disk outline icon"></i>
        </div>
      {{/link-to}}
      <div class="content">
        {{#link-to 'app.syncthing.devices.edit' device class="header"}}
          <i class="disk outline icon"></i> {{device.name}}
        {{/link-to}}
        <div class="meta">
          Sync Device
        </div>
      </div>
      <div class="ui bottom attached button red {{if device.isReady (if device.isMainDevice 'disabled') 'disabled'}}" {{action 'openModal' 'delete-device' device}}>
        <i class="trash icon"></i> Delete
      </div>
    </div>
  {{/each}}
</div>

{{#ui-modal name="delete-device" class="basic delete-device" onApprove=(action 'deleteDevice')}}
  <i class="close icon"></i>
  <div class="ui icon header">
    <i class="disk outline icon"></i>
    Delete device?
  </div>
  <div class="text center content">
    <div class="description">
      <p>Are you sure you want to delete <strong>{{selectedDevice.id}}</strong>?</p>
    </div>
  </div>
  <div class="actions">
    <div class="ui cancel basic inverted button">
      No
    </div>
    <div class="ui ok red basic inverted right labeled icon button">
      Yes
      <i class="checkmark icon"></i>
    </div>
  </div>
{{/ui-modal}}
