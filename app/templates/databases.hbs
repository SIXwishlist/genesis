<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#dbs" aria-controls="dbs" role="tab" data-toggle="tab"><i class="fa fa-database"></i> Databases</a></li>
    <li role="presentation"><a href="#users" aria-controls="users" role="tab" data-toggle="tab"><i class="fa fa-user"></i> Database Users</a></li>
</ul>

<div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="dbs">
        <div class="ui-items-4">
            {{#each db in model.dbs}}
              <div {{bind-attr class=":ui-item db.isReady::is-pending"}}>
                <div class="ui-item-icon">
                    <i class="fa fa-database fa-fw fa-5x"></i>
                </div>
                <div class="ui-item-content">
                  <h2>{{db.id}}</h2>
                  <p class="lead">{{db.typeName}}</p>
                  <div class="btn-group btn-group-sm">
                    <a href="#" {{bind-attr class=":btn :btn-default db.isReady::disabled"}} {{action 'showModal' 'database/edit' db model}}><i class="fa fa-info-circle"></i> Info</a>
                    <a href="#" {{bind-attr class=":btn :btn-danger db.isReady::disabled"}} {{action 'showConfirm' 'delete' 'Are you sure you want to delete this database?' db}}><i class="fa fa-minus-circle"></i> Delete</a>        
                  </div>
                </div>
              </div>
            {{/each}}
            <div class="ui-item">
              <div class="ui-item-icon">
                <i class="fa fa-plus-circle fa-fw fa-5x"></i>
              </div>
              <div class="ui-item-content">
                <h2>Add</h2>
                <p class="lead">New Database</p>
                <div class="btn-group btn-group-sm">
                  <a href="#" class="btn btn-default" {{action 'showModal' 'database/add' model}}><i class="fa fa-database"></i> Add</a>
                </div>
              </div>
            </div>
        </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="users">
        <div class="ui-items-4">
            {{#each db in model.users}}
              <div {{bind-attr class=":ui-item db.isReady::is-pending"}}>
                <div class="ui-item-icon">
                    <i class="fa fa-user fa-fw fa-5x"></i>
                </div>
                <div class="ui-item-content">
                  <h2>{{db.id}}</h2>
                  <p class="lead">{{db.typeName}}</p>
                  <div class="btn-group btn-group-sm">
                    <a href="#" {{bind-attr class=":btn :btn-default db.isReady::disabled"}} {{action 'showModal' 'database/edit-user' db model}}><i class="fa fa-info-circle"></i> Edit</a>
                    <a href="#" {{bind-attr class=":btn :btn-danger db.isReady::disabled"}} {{action 'showConfirm' 'delete' 'Are you sure you want to delete this database user?' db}}><i class="fa fa-minus-circle"></i> Delete</a>        
                  </div>
                </div>
              </div>
            {{/each}}
            <div class="ui-item">
              <div class="ui-item-icon">
                <i class="fa fa-plus-circle fa-fw fa-5x"></i>
              </div>
              <div class="ui-item-content">
                <h2>Add</h2>
                <p class="lead">Database User</p>
                <div class="btn-group btn-group-sm">
                  <a href="#" class="btn btn-default" {{action 'showModal' 'database/add-user' model}}><i class="fa fa-user"></i> Add</a>
                </div>
              </div>
            </div>
        </div>
    </div>
</div>
