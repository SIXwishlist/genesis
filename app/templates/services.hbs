<div class="input-group">
  {{input type="text" class="form-control" value=filterQuery placeholder="Filter results"}}
  <span class="input-group-btn">
    <button class="btn btn-default" type="button" {{action 'clearFilter'}}><i class="fa fa-fw fa-times-circle"></i> Clear</button>
  </span>
</div>

<table class="table">
  <tbody>
    <tr>
      <th width="1"></th>
      <th>Service Name</th>
      <th>State</th>
      <th>Enabled</th>
      <th>Provider</th>
      <th width="175">Actions</th>
    </tr>
    {{#each filteredServices as |svc|}}
      <tr class="{{if svc.isReady '' 'text-muted'}}">
        <td><i class="fa fa-spinner"></i></td>
        <td>{{svc.id}}</td>
        <td class="{{if svc.running 'text-success' 'text-danger'}}"><i class="fa fa-fw {{if svc.running 'fa-play' 'fa-stop'}}"></i> {{if svc.running 'Running' 'Stopped'}}</td>
        <td class="{{if svc.enabled 'text-success' 'text-danger'}}"><i class="fa fa-fw {{if svc.running 'fa-thumbs-up' 'fa-thumbs-o-down'}}"></i> {{if svc.enabled 'Enabled' 'Disabled'}}</td>
        <td>{{svc.displayType}}</td>
        <td>
          <div class="btn-group btn-group-sm">
            <a href="#" class="btn btn-default {{if svc.isReady '' 'disabled'}} {{if svc.canManage '' 'disabled'}}" {{action 'toggleState' svc}}><i class="fa fa-fw {{if svc.running 'fa-stop' 'fa-play'}}"></i> {{if svc.running 'Stop' 'Start'}}</a>
            <a href="#" class="btn btn-default {{if svc.isReady '' 'disabled'}} {{if svc.canManage '' 'disabled'}}" {{action 'toggleFileState' svc}}><i class="fa fa-fw {{if svc.enabled 'fa-thumbs-down' 'fa-thumbs-up'}}"></i> {{if svc.enabled 'Disable' 'Enable'}}</a>
          </div>
        </td>
      </tr>
    {{else}}
      <tr><td class="text-center" colspan="6">None</td></tr>
    {{/each}}
  </tbody>
</table>
