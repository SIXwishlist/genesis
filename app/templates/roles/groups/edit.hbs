<div class="ui segment">
  <form class="ui form" {{action 'ok' on='submit'}}>
    <h4 class="ui dividing header">Editing group: {{model.name}}</h4>
    <div class="field">
      <label>Group name</label>
      {{input type="text" class="form-control" value=model.name disabled=true}}
    </div>
    <div class="field">
      <label>Members</label>
      {{#ui-dropdown class="fluid multiple selection" selected=model.users onChange=(action (mut model.users)) as |execute mapper|}}
        <i class="dropdown icon"></i>
        <div class="default text">Select users</div>
        <div class="menu">
          {{#each users as |user|}}
            <div class="item" data-value="{{map-value mapper user}}">
              {{user.name}}
            </div>
          {{/each}}
        </div>
      {{/ui-dropdown}}
    </div>
    <button type="submit" class="ui button" ><i class="fa fa-fw fa-floppy-o"></i> Save</button>
  </form>
</div>
