<div class="ui segment">
  <form class="ui form" {{action 'ok' on='submit' target=view}}>
    <h4 class="ui dividing header">Add new group</h4>
    <div class="required field">
      <label>Group Name</label>
      {{input type="text" class="username" value=newGroup.name}}
    </div>
    <div class="required field">
      <label>Members</label>
      {{#ui-dropdown class="fluid multiple selection" selected=newGroup.users onChange=(action (mut newGroup.users)) as |execute mapper|}}
        <i class="dropdown icon"></i>
        <div class="default text">Select users</div>
        <div class="menu">
          {{#each users as |user|}}
            <div class="item" data-value="{{map-value mapper user}}">
              {{user.name}}
            </div>
          {{/each}}
        </div>
      {{/ui-dropdown}}
    </div>
    <button type="submit" class="ui button"><i class="fa fa-fw fa-floppy-o"></i> Save</button>
  </form>
</div>
