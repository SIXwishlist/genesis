<div class="ui basic segment">
  <div class="ui grid">
    <div class="four wide column">
      <div class="ui card">
        <div class="image">
          <div class="{{model.cardColor}}">
            <i class="user icon"></i>
          </div>
        </div>
        <div class="content">
          <div class="header"><i class="user icon"></i> {{model.id}}</div>
          <div class="meta">{{model.typeName}}</div>
        </div>
        <div class="ui bottom attached button red {{if model.isReady '' 'disabled'}}" {{action 'openModal' 'delete-user'}}>
          <i class="fa fa-minus-circle fa-fw"></i> Delete
        </div>
      </div>
    </div>
    <div class="twelve wide column">
      <div class="ui segment">
        <form class="ui form" {{action 'save' on='submit'}}>
          <div class="field">
            <label>Permissions</label>
            {{textarea rows="6" value=model.permissions disabled="true"}}
          </div>
          <div class="required field">
            <label>Take Action</label>
            {{#ui-dropdown class="selection" onChange=(action (mut action))}}
              <div class="default text">Select an action</div>
              <i class="dropdown icon"></i>
              <div class="menu">
                {{#each actionsToTake as |act|}}
                  <div class="item" data-value="{{act}}">
                    {{act}}
                  </div>
                {{/each}}
              </div>
            {{/ui-dropdown}}
          </div>
          <div class="required field">
            <label>On Database</label>
            {{#ui-dropdown class="selection" onChange=(action (mut selectedDb))}}
              <div class="default text">Select a database</div>
              <i class="dropdown icon"></i>
              <div class="menu">
                {{#each availableDbs as |db|}}
                  <div class="item" data-value="{{db.id}}">
                    {{db.id}}
                  </div>
                {{/each}}
              </div>
            {{/ui-dropdown}}
          </div>
          <button type="submit" class="ui primary button"><i class="fa fa-fw fa-floppy-o"></i> Save</button>
          {{#link-to "tools.databases" activeClass="" class="ui button"}}<i class="fa fa-fw fa-times-circle"></i> Cancel{{/link-to}}
        </form>
      </div>
    </div>
  </div>
</div>

{{#ui-modal name="delete-db" class="basic delete-user" onApprove=(action 'deleteUser')}}
  <i class="close icon"></i>
  <div class="ui icon header">
    <i class="user icon"></i>
    Delete database user?
  </div>
  <div class="text center content">
    <div class="description">
      <p>Are you sure you want to delete database user <strong>{{model.id}}</strong>?</p>
    </div>
  </div>
  <div class="actions">
    <div class="ui cancel basic inverted button">
      No
    </div>
    <div class="ui ok red basic inverted right labeled icon button">
      Yes
      <i class="checkmark icon"></i>
    </div>
  </div>
{{/ui-modal}}
