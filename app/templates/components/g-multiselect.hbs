<select class="multi" multiple="multiple">
    {{#each item in options}}
        {{#if item.selectId}}
        <option {{bind-attr value="item.selectId"}}>{{#if item.selectText}}{{item.selectText}}{{else}}{{item.name}}{{/if}}</option>
        {{else}}
        <option {{bind-attr value="item.id"}}>{{#if item.selectText}}{{item.selectText}}{{else}}{{item.name}}{{/if}}</option>
        {{/if}}
    {{/each}}
</select>
