<a href="#" class="btn btn-default pull-right" {{action 'showModal' 'network/add' model}}><i class="fa fa-plus-circle"></i> Add Network</a>
<h1 class="page-header">My Networks</h1>

<div class="ui-items-3">
  {{#each model.networks as |net|}}
    <div class="ui-item {{if net.isReady '' 'is-pending'}}">
      <div class="ui-item-icon">
        <i class="fa fa-fw fa-5x {{net.typeIcon}} {{if net.connected 'text-success'}}"></i>
      </div>
      <div class="ui-item-content">
        <h2>{{net.id}}</h2>
        <p class="lead">{{net.type}}{{#if net.connected}} (Connected){{/if}}</p>
        <div class="ui-item-buttons">
          <a href="#" class="ui-item-button {{if net.isReady '' 'disabled'}}" {{action 'showModal' 'network/info' net model}}><i class="fa fa-fw fa-lg fa-info-circle"></i><br />Info</a>
          <a href="#" class="ui-item-button {{if net.isReady '' 'disabled'}}" {{action 'toggle' net}}><i class="fa fa-fw fa-lg {{if net.connected 'fa-times' 'fa-check'}}"></i><br />{{if net.connected 'Disconnect' 'Connect'}}</a>
          <a href="#" class="ui-item-button {{if net.isReady '' 'disabled'}}" {{action 'toggleEnabled' net}}><i class="fa fa-fw fa-lg {{if net.enabled 'fa-thumbs-down' 'fa-thumbs-up'}}"></i><br />{{if net.enabled 'Disable' 'Enable'}}</a>
          <a href="#" class="ui-item-button text-danger {{if net.isReady '' 'disabled'}}" {{action 'showConfirm' 'delete' 'Are you sure you want to delete this network? It will be disconnected in the process.' net}}><i class="fa fa-fw fa-lg fa-minus-circle"></i><br />Delete</a>
        </div>
      </div>
    </div>
  {{else}}
    <div class="text-center">
      <h1 class="fa fa-sitemap fa-5x"></h1>
      <p class="lead">No networks found.</p>
    </div>
  {{/each}}
</div>
