<div class="ui basic segment">
  <div class="ui grid">
    <div class="four wide column">
      <div class="ui card">
        <div class="image">
          <div class="{{cardColor}}">
            <i class="user icon"></i>
          </div>
        </div>
        {{#if name}}
        <div class="content">
          <div class="header"><i class="user icon"></i> {{firstName}}{{#if lastName}} {{lastName}}{{/if}}</div>
          <div class="meta">{{name}}</div>
        </div>
        {{/if}}
      </div>
    </div>
    <div class="twelve wide column">
      <div class="ui segment">
        {{#ui-form fields=fields onSubmit='save' onCancel='redirect'}}
          <div class="required field">
            <label>Username</label>
            {{input type="text" name="username" value=name}}
          </div>
          <div class="field">
            <label>Name</label>
            <div class="two fields">
              <div class="required field">
                {{input type="text" name="firstName" value=firstName placeholder="First name"}}
              </div>
              <div class="field">
                {{input type="text" name="lastName" value=lastName placeholder="Last name"}}
              </div>
            </div>
          </div>
          <div class="required field">
            <label>Domain</label>
            {{#ui-dropdown class="selection" selected=domains.firstObject onChange=(action (mut domain)) as |execute mapper|}}
              <div class="text"></div>
              <i class="dropdown icon"></i>
              <div class="menu">
                {{#each domains as |domain|}}
                  <div class="item" data-value="{{map-value mapper domain}}">
                    {{domain.id}}
                  </div>
                {{/each}}
              </div>
            {{/ui-dropdown}}
          </div>
          <div class="required field">
            <label>New Password</label>
            <div class="two fields">
              <div class="field">
                {{input type="password" name="password" value=passwd placeholder="New password"}}
              </div>
              <div class="field">
                {{input type="password" name="passwordConf" value=passwdb placeholder="Confirm password"}}
              </div>
            </div>
          </div>
          <div class="field">
            {{ui-checkbox label="Administrator" name="admin" checked=admin onChange=(action (mut admin))}}
            <p>An administrator can login to Genesis and modify settings.</p>
          </div>
          <div class="field">
            {{ui-checkbox label="Sudo" name="sudo" checked=sudo onChange=(action (mut sudo))}}
            <p>A sudo user is allowed root access to this system via the command line (SSH or Terminal).</p>
          </div>
        {{/ui-form}}
      </div>
    </div>
  </div>
</div>
