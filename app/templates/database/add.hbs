{{#g-modal title="Adding Database" icon="fa-database" ok="save" close="removeModal"}}
  <form {{action 'ok' on='submit' target=view}}>
    <div class="form-group">
      <label for="type">Database Type</label>
      {{#x-select class="form-control required" action="didMakeSelection" default=type}}
        {{#each model.types as |t|}}
          {{#x-option value=t.id}}{{t.name}}{{/x-option}}
        {{/each}}
      {{/x-select}}
    </div>
    <div class="form-group">
      <label for="id">Database Name</label>
      {{input type="text" class="form-control required" value=id}}
    </div>
  </form>
{{/g-modal}}
