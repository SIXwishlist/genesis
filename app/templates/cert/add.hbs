{{#g-modal title="Generating Certificate" icon="fa-certificate" ok="save" close="removeModal"}}
  <form {{action 'ok' on='submit' target=view}}>
    <div class="form-group">
      <label for="id">Name</label>
      {{input type="text" class="form-control username required" value=newCert.id}}
      <p class="help-block">An internal name to help you identify this certificate in arkOS.</p>
    </div>
    <div class="form-group">
      <label for="country">Country</label>
      {{input type="text" class="form-control required" value=newCert.country}}
      <p class="help-block">A two-letter representation of your country. Example: 'US' for United States</p>
    </div>
    <div class="form-group">
      <label for="state">State or Province</label>
      {{input type="text" class="form-control" value=newCert.state}}
    </div>
    <div class="form-group">
      <label for="locality">Locality</label>
      {{input type="text" class="form-control" value=newCert.locality}}
      <p class="help-block">Your town, city or community name</p>
    </div>
    <div class="form-group">
      <label for="domain">Server Address</label>
      {{input type="text" class="form-control required" value=newCert.domain}}
      <p class="help-block">The address to register this certificate to. NOTE that you will only be able to access your applications with this exact address. Make sure that the system can accept requests with this address.</p>
    </div>
    <div class="form-group">
      <label for="email">Email</label>
      {{input type="text" class="form-control" value=newCert.email}}
    </div>
    <h3 class="page-header">Advanced</h3>
    <div class="form-group">
      <label for="domains">Key Type</label>
      {{#x-select class="form-control required" action="didMakeSelection" default=newCert.keytype}}
        {{#each keytypes as |keytype|}}
          {{#x-option value=keytype}}{{keytype}}{{/x-option}}
        {{/each}}
      {{/x-select}}
    </div>
    <div class="form-group">
      <label for="keylength">Keylength</label>
      {{input type="text" class="form-control required" value=newCert.keylength}}
    </div>
  </form>
{{/g-modal}}
