{{#g-modal title="Certificate Info" icon="fa-certificate" ok="save" close="removeModal"}}
    <div class="form-horizontal">
        <div class="form-group">
            <label for="id" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{model.id}}</p>
            </div>
        </div>
        <div class="form-group">
            <label for="id" class="col-sm-2 control-label">Serves</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{model.domain}}</p>
            </div>
        </div>
        <div class="form-group">
            <label for="id" class="col-sm-2 control-label">Expiry</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{format-date-time model.expiry}}</p>
            </div>
        </div>
        <div class="form-group">
            <label for="id" class="col-sm-2 control-label">Key Type</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{model.typeString}}</p>
            </div>
        </div>
        <div class="form-group">
            <label for="id" class="col-sm-2 control-label">MD5</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{model.md5}}</p>
            </div>
        </div>
        <div class="form-group">
            <label for="id" class="col-sm-2 control-label">SHA1</label>
            <div class="col-sm-10">
                <p class="form-control-static">{{model.sha1}}</p>
            </div>
        </div>
    </div>
    <div class="form-group">
        <h3>Assign</h3>
        {{g-multiselect options=model.extra.assns.certassigns selected=model.assigns addAction="addSelected" removeAction="removeSelected" }}
    </div>
{{/g-modal}}
