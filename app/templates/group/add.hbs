{{#g-modal title="Adding Group" icon="fa-users" ok="save" close="removeModal"}}
    <form {{action 'ok' on='submit' target=view}}>
        <div class="form-group">
            <label for="name">Group Name</label>
            {{input type="text" class="form-control username required" value=name}}
        </div>
        <div class="form-group">
        <h4>Members</h4>
            {{g-multiselect options=model.users addAction="addSelectedId" removeAction="removeSelectedId" }}
        </div>
    </form>
{{/g-modal}}
