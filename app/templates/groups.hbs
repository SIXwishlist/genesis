<a class="btn btn-default pull-right" {{action 'showModal' 'group/add' model}}><i class="fa fa-group"></i> Add Group</a>

<ul class="nav nav-tabs manual-tabs">
    <li>{{#link-to 'users'}}<i class="fa fa-user fa-fw"></i> Users{{/link-to}}</li>
    <li class="active">{{#link-to 'groups'}}<i class="fa fa-users fa-fw"></i> Groups{{/link-to}}</li>
    <li>{{#link-to 'domains'}}<i class="fa fa-code fa-fw"></i> Domains{{/link-to}}</li>
</ul>

<table class="table">
    <tr>
        <th width="1"></th>
        <th>Group Name</th>
        <th>Members</th>
        <th width="150">Actions</th>
    </tr>
    {{#each group in model.groups}}
    <tr {{bind-attr class="group.isPending:is-pending"}}>
        {{#if group.isPending}}
        <td><i class="fa fa-spinner fa-spin"></i></td>
        {{else}}
        <td><i class="fa fa-group"></i></td>
        {{/if}}
        <td>{{group.name}}</td>
        <td>{{#each user in group.users}}{{#if _view.contentIndex}}, {{/if}}{{user}}{{else}}None{{/each}}</td>
        <td>
            <div class="btn-group btn-group-sm">
                <a href="#" {{bind-attr class=":btn :btn-default group.isPending:disabled"}} {{action 'showModal' 'group/edit' group model}}><i class="fa fa-info-circle"></i> Edit</a>
                <a href="#" {{bind-attr class=":btn :btn-danger group.isPending:disabled"}} {{action 'showConfirm' 'delete' 'Are you sure you want to delete this group?' group}}><i class="fa fa-minus-circle"></i> Delete</a>        
            </div>
        </td>
    </tr>
    {{else}}
    <tr>
        <td colspan=4 class="text-center">None</td>
    </tr>
    {{/each}}
</table>
