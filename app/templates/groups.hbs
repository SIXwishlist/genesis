<ul class="nav nav-tabs manual-tabs">
    <li>{{#link-to 'users'}}<i class="fa fa-user fa-fw"></i> Users{{/link-to}}</li>
    <li class="active">{{#link-to 'groups'}}<i class="fa fa-users fa-fw"></i> Groups{{/link-to}}</li>
    <li>{{#link-to 'domains'}}<i class="fa fa-code fa-fw"></i> Domains{{/link-to}}</li>
</ul>

<div class="ui-items-4">
    {{#each group in model.groups}}
      <div {{bind-attr class=":ui-item group.isReady::is-pending"}}>
        <div class="ui-item-icon">
            <i class="fa fa-group fa-fw fa-5x"></i>
        </div>
        <div class="ui-item-content">
          <h2>{{group.name}}</h2>
          {{#if group.users.length}}
          <p class="lead">{{group.users.length}} members</p>
          {{else}}
          <p class="lead">No members</p>
          {{/if}}
          <div class="btn-group btn-group-sm">
            <a href="#" {{bind-attr class=":btn :btn-default group.isReady::disabled"}} {{action 'showModal' 'group/edit' group model}}><i class="fa fa-info-circle"></i> Edit</a>
            <a href="#" {{bind-attr class=":btn :btn-danger group.isReady::disabled"}} {{action 'showConfirm' 'delete' 'Are you sure you want to delete this group?' group}}><i class="fa fa-minus-circle"></i> Delete</a>        
          </div>
        </div>
      </div>
    {{/each}}
    <div class="ui-item">
      <div class="ui-item-icon">
        <i class="fa fa-plus-circle fa-fw fa-5x"></i>
      </div>
      <div class="ui-item-content">
        <h2>Add</h2>
        <p class="lead">New Group</p>
        <div class="btn-group btn-group-sm">
          <a href="#" class="btn btn-default" {{action 'showModal' 'group/add' model}}><i class="fa fa-group"></i> Add</a>
        </div>
      </div>
    </div>
</div>
